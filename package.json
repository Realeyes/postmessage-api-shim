{
  "name": "postmessage-api-shim",
  "version": "0.1.0",
  "description": "Promise-based postMessage API shim",
  "main": "index.js",
  "scripts": {
    "test": "npm run build && node ./node_modules/karma/bin/karma start test/karma.conf.js",
    "build": "browserify build.js -d -t [ babelify --presets [ es2015 ] --global ] > dist/index.js && n-copy --source node_modules/es6-promise-polyfill --destination dist promise.js"
  },
  "browserify": {
    "transform": [["babelify", { "presets": ["es2015"] }]]
  },
  "keywords": [
    "postmessage",
    "api",
    "shim"
  ],
  "author": "David Klassen <david.klassen@realeyesit.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "es6-object-assign": "^1.1.0",
    "es6-promise-polyfill": "^1.2.0",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.3",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^0.2.2",
    "karma-spec-reporter": "0.0.26",
    "mocha": "^2.4.5",
    "npm-build-tools": "^2.2.5",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Realeyes/postmessage-api-shim.git"
  }
}
